{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "typeRoots": [
      "node_modules/@types",
      "./utils"
    ]
  },

  "include": [
    "src/**/*",
    "utils/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
